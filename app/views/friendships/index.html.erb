<h1>Sent friendship requests</h1>

<% @friendships.each do |f| %>
    <div class="p-3 mb-3 bg-secondary rounded col-md-8 offset-md-2 text-white">
      <small>User: <%=  f.friend.first_name %> </small><br>
      
      <%= delete_button(f) %>
      
    </div>

<% end %>

<h1>Received friendship requests</h1>

<% @inverse_friendships.each do |f| %>
    <div class="p-3 mb-3 bg-secondary rounded col-md-8 offset-md-2 text-white">
      <small>User: <%=  f.user.first_name %> </small><br>
      
      <%#= delete_button(user_post) %>
      
    </div>

<% end %>
<%#= render @friendship %>