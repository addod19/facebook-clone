<h1 class="text-center">Friendship requests</h1>
<% if unconfirmed_requests.size > 0 %>
  <% @inverse_friendships.each do |f| %>
    <% if f.confirmed == false %>
      <div class="p-3 mb-3 bg-secondary rounded col-md-8 offset-md-2 text-white">
        <small>User: <%=  f.user.first_name %> </small><br>     
        <%= form_for f do |friend| %>
            <%= hidden_field_tag "friend", f %>
            <div class="actions">
                <%= friend.submit "Confirm friend", class: "btn btn-success mt-1" %>
            </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
<% else %>
  <h2 class="text-center">You have no friendship requests</h2>
<% end %>