
<div class="container mt-3">
    <div class="row justify-content-between">
        <% @users.each do |user| %>
            <div class="p-3 mb-3 bg-secondary rounded col-md-8 offset-md-2 text-white">
                <%= user.first_name %> <%= user.last_name %>
                <%= toggle_button(user) %>
            </div>
        <% end %>
    </div>
</div>